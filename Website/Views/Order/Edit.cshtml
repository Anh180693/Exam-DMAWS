<h2>Edit Order @ViewBag.ItemCode</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="ItemCode" value="@ViewBag.ItemCode" />
    <div>
        <label>Order Delivery Date</label>
        <input type="datetime-local" name="OrderDelivery" required />
    </div>
    <div>
        <label>Order Address</label>
        <input type="text" name="OrderAddress" required />
    </div>
    <button type="submit">Submit</button>
</form>
